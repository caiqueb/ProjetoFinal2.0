@model IEnumerable<ProjetoFinal2._0.Models.Departaments>
@{
    ViewBag.Title = "Index";
}

<center>
    <img src="~/imagens/logo3.png" />
    <h2>Departamentos</h2>
</center>

<p>
    @Html.ActionLink("Criar Departamento", "Create", new { }, new { @class = "btn btn-primary" })

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.DepartamentsId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.DepartamentsId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.DepartamentsId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
