@model IEnumerable<ProjetoFinal2._0.Models.Tax>

@{
    ViewBag.Title = "Index";
}

<center>
    <img src="~/imagens/logo3.png" />
    <h2>Imposto</h2>
</center>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
