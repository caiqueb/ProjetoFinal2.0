@model IEnumerable<ProjetoFinal2._0.Models.Purchase>
@{
    ViewBag.Title = "Index";
}

<center>
    <img src="~/imagens/logo3.png" />
    <h2>Compras</h2>
</center>

<p>
    @Html.ActionLink("Nova Compra", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Company.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Provider.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provider.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PurchaseId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PurchaseId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PurchaseId })
            </td>
        </tr>
    }

</table>
